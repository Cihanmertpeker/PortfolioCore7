@model Portfolio
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Proje Güncelleme Sayfası</h2>

<form method="post">
    <input type="hidden" asp-for="PortfolioId" />

    <label>Proje Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />

    <label>Proje Açıklaması</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />

    <label>Görsel Url</label>
    <input type="text" asp-for="imageUrl" class="form-control" />
    <br />

    <label>Proje Url</label>
    <input type="text" asp-for="ProjectUrl" class="form-control" />
    <br />

    <label>Proje Kategorisi</label>
    <select asp-for="CategoryId" asp-items="ViewBag.updatedCategory" class="form-control">
        <option value="">Seciniz</option>
    </select>
    <br />

    <button class="btn btn-primary">Kaydet</button>
</form>
