@model List<PortfolioCore7.Entities.Experience>

@{
    ViewData["Title"] = "ExperienceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Deneyim Listesi</h2>

<table class="table table-bordered"><
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Açıklama</th>
        <th>Tarih</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ExperienceId</td>
            <td>@item.Title</td>
            <td>@item.Subtitle</td>
            <td>@item.Description</td>
            <td>@item.ExperienceDate</td>
            <td><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-info">Güncelle</a></td>
            <td><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
   
</table>
<br />
<td><a href="/Experience/CreateExperience/" class="btn btn-primary">Yeni Deneyim Ekle</a></td>




