@model Message



<div class="col-lg-8">
    <form action="/Message/SendMessage" method="post" data-aos="fade-up" data-aos-delay="200">
        <div class="row gy-4">
            <div class="col-md-6">
                <input type="text" asp-for="NameSurname" class="form-control" placeholder="Adınız Soyadınız" required>
            </div>

            <div class="col-md-6">
                <input type="email" class="form-control" asp-for="Email" placeholder="Mail Adresiniz" required>
            </div>
            <div class="col-md-12">
                <input type="text" class="form-control" asp-for="Subject" placeholder="Konu" required>
            </div>

            <div class="col-md-12">
                <textarea class="form-control" asp-for="MessageDetail" rows="6" placeholder="Mesaj" required></textarea>
            </div>

            <div class="col-md-12 text-center">

                <button onclick="sendMessage()" class="btn btn-primary">Mesaj Gönder</button>

            </div>
        </div>
    </form>
</div>


<!-- End Contact Form -->


<script>
    function sendMessage() {
      Swal.fire({
        title: "Mesajınız başarıyla gönderildi!",
        text: "Teşekkür ederiz!",
        icon: "success",
        showConfirmButton: false,
        allowOutsideClick: false,
        allowEscapeKey: false
      }).then(() => {
        setTimeout(() => {
          document.querySelector("form").submit();
          window.location.href = "/Default/index/";
        }, 1000);
      });
    }
</script>


