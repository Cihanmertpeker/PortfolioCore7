@model List<Feature>


@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Öne Çıkanlar</h2>

<table class="table table-bordered">
    <
    <tr>
        <th>#</th>
        <th>İsim Soyisim</th>
        <th>1. Başlık</th>
        <th>2. Başlık</th>
        <th>3. Başlık</th>
        <th>Resim Url</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FeatureID</td>
            <td>@item.FeatureNameSurname</td>
            <td>@item.FeatureTitle1</td>
            <td>@item.FeatureTitle2</td>
            <td>@item.FeatureTitle3</td>
            <td>@item.FeatureImageURL</td>
            <td><a href="/Feature/UpdateFeature/@item.FeatureID" class="btn btn-info">Güncelle</a></td>
            <td><a href="/Feature/DeleteFeature/@item.FeatureID" class="btn btn-danger">Sil</a></td>
        </tr>
    }

</table>
<br />
<td><a href="/Feature/CreateFeature/" class="btn btn-primary">Yeni Öne Çıkan Ekle</a></td>